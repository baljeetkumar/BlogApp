
<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
                  <% blogg.forEach(function(bloggg){ %>
                  
                  <div class="item">
                      
                      <div class="image">
                           <img src="<%= bloggg.image %>" >
                      </div>
                      
                      <div class="content">
                          
                          <a class="header" href="/blogs/<%=bloggg._id%>"><%=bloggg.title %></a>
                          
                          <div class="meta">
                               <span><%=bloggg.created.toDateString() %></span> 
                          </div>
                          
                          <div class="description">
                              <p><%-bloggg.body.substring(0,100)%>...</p>
                          </div>
                          
                          <div class="extra">
                               <a class="ui floated basic violet button" href="/blogs/<%=bloggg._id%>">Read More 
                                          <i id="ic" class="right chevron icon"></i>  </a>
                          </div>
                          
                      </div>
                      
                   </div>

                  <% }) %>
        </div>
    </div>
    
</div>    



<% include ./partials/footer %>