
<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= all.title %> </div>
    <form class ="ui form "action="/blogs/<%=all._id %>?_method=PUT" method="POST">
        
        <div class="field">
            <label>Title</label>
             <input type="text" name="blog[title]" value="<%=all.title %>">
        </div>
        
       
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=all.image %>">
        </div>
        
        
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]" ><%=all.body %></textarea>
        </div>
       
        <input type="submit" class="ui secondary big button">
    </form>
</div>

<% include ./partials/footer %>
